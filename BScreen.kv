#:kivy 0.5.5
<ColorSelectScreen>:
    label:lbcolor
    name: 'colorselect'
    BoxLayout:
        orientation: 'vertical'
        padding:'20dp'
        spacing:'10dp'
        Label:
            text:'Set Color'
            color:0,0,0,1
            border:

        Slider:
            id: slider
            min: 1
            max: 150
            step: 1
            value: 1
            on_value: 
                root.manager.get_screen('colorselect').label.background_color=slider.value/255, slider.value/255, slider.value/255, 1
                root.manager.get_screen('black').label.text=str(slider.value)
        Label:
            #outline_color: 5, 5, 5, 1
            id: lbcolor
            size:root.width*0.75,root.height*.25
            canvas.before:
                Color:
                    rgba:slider.value/255, slider.value/255, slider.value/255, 1#self.background_color
                Rectangle:
                    size:self.size
                    pos:self.pos

        BoxLayout:
            Button:
                text: 'Quick Change'
                on_press: 
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'black'
            Button:
                text: 'Set Wallpaper'
                on_press: 
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'black'

<ColorScreen>:
    label: lbl
    name: 'black'
    orientation: 'vertical'
    BoxLayout:
        Button:
            text: 'Go back'
            on_press: 
                root.manager.transition.direction = 'right'
                root.manager.current = 'colorselect'

        Label:
            id: lbl
            text: '1'
            canvas.before:
                Color:
                    rgba:int(lbl.text)/255,0,0,1#self.background_color
                Rectangle:
                    size:self.size
                    pos:self.pos